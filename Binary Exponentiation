#include<iostream>
using namespace std;

double binary_exponentiation(double x, double n){

    long binform = n;
    if (binform<0){
        x=1/x;
        binform = -binform;
    }
    double ans = 1;

    while(binform>0){
        if (binform%2==1){
            ans*=x;
        }

        binform/=2;
        x*=x;
    }

    return ans;
}

int main(){
     
    double base,exponent;
    cout<<"Enter a base - ";
    cin>>base;
    cout<<"Enter a exponent - ";
    cin>>exponent;

    cout<<"The result of "<<base<<"^"<<exponent<<" is "<<binary_exponentiation(base,exponent);

    return 0;
}
